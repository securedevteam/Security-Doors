@model IEnumerable<DoorPassingViewModel>

<h1>Список дверных проходов</h1>

<br />

<div>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Время прохода</th>
                <th>Id двери</th>
                <th>Id сотрудника</th>
                <th>Комментарий</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.PassingTime</td>
                <td>@item.DoorId</td>
                <td>@item.PersonId</td>
                <td>@item.Comment</td>
            </tr>
            }
        </tbody>
    </table>
</div>
