@model ReportDoorPassingViewModel

<script>
    function emailValidation() {
        var re = /^[\w-\.]+@@[\w-]+\.[a-z]{2,4}$/i;
        var myEmail = document.getElementById('Email').value;
        var valid = re.test(myEmail);

        if (valid)
        {
            document.getElementById('submit').disabled = false;
            output = '';
        }
        else
        {
            document.getElementById('submit').setAttribute('disabled', 'disabled');
            output = '@Localizer["Error"]';
        }

        document.getElementById('message').innerHTML = output;

        return valid;
    }
</script>

<form method="post" asp-controller="DoorPassing" asp-action="CreatePDFReport">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-row">
        <div class="form-group col-md-8" onblur="emailValidation()">
            <b><label asp-for="Email"></label></b>
            <input type="email" asp-for="Email" class="form-control" onblur="emailValidation()" oninput="emailValidation()" />
            <span asp-validation-for="Email"></span>
            <small id="message" class="form-text text-muted"></small>
        </div>

        <div class="form-group col-md-4">
            <b><label asp-for="Type"></label></b>
            <select asp-for="Type" class="form-control">
                <option>@ReportDataConstants.IS_PDF</option>
                <option>@ReportDataConstants.IS_EXCEL</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <b><label asp-for="Header"></label></b>
        <input type="text" asp-for="Header" class="form-control" />
        <span asp-validation-for="Header"></span>
    </div>

    <div class="form-group">
        <b><label asp-for="Description"></label></b>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <b><label asp-for="Footer"></label></b>
        <input type="text" asp-for="Footer" class="form-control" />
        <span asp-validation-for="Footer"></span>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <b><label asp-for="Start"></label></b>
            <input type="datetime-local" asp-for="Start" class="form-control" />
            <span asp-validation-for="Start"></span>
        </div>

        <div class="form-group col-md-6">
            <b><label asp-for="End"></label></b>
            <input type="datetime-local" asp-for="End" class="form-control" />
            <span asp-validation-for="End"></span>
        </div>
    </div>

    <div class="form-group">
        <b><label asp-for="Card"></label></b>
        <input type="text" asp-for="Card" class="form-control" />
        <span asp-validation-for="Card"></span>
    </div>

    <button id="submit" type="submit" class="btn btn-danger btn-lg btn-block" disabled>@Localizer["Send"]</button>
</form>
