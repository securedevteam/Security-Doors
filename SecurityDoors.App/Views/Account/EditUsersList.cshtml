@model IEnumerable<SecurityDoors.DataAccessLayer.Models.User>

@{
    ViewData["Title"] = Localizer["Header"];
}

<div class="text-center">
    <h1>@Localizer["ActiveUsersList"]</h1>
</div>

<br />

<div class="table-responsive">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Localizer["Symbol"]</th>
                <th scope="col">@Localizer["Email"]</th>
                <th scope="col">@Localizer["NikName"]</th>
                <th scope="col">@Localizer["AvailableActions"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Email</td>
                    <td>@item.Nickname</td>
                    <td>
                        @if (User.Identity.Name != item.Email)
                        {
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button class="btn btn-outline-danger" type="submit" onclick="return confirm('@Localizer["ConfirmationMessage"]') ? catimg('del','30') : false;">@Localizer["Delete"]</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
