<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
    <body>
        <a asp-action="Index" asp-controller="Home">Home</a> <br />
        <a asp-action="About" asp-controller="Home">About</a> <br />

        <br />

        @if (User.Identity.IsAuthenticated)
        {
            <p>Вы вошли в систему, как: @User.Identity.Name</p>

            <form method="post" asp-controller="Account" asp-action="LogOff">
                <input type="submit" value="Выход" />
            </form>

            <br />

            @if (User.IsInRole("admin"))
            {
                <a asp-controller="Account" asp-action="SettingUsersRoles">Разграничить права пользователей</a> <br />
                <a asp-controller="Account" asp-action="EditUsersList">Редактироать список активных пользователей</a> <br />
            }

            @if (User.IsInRole("admin") || User.IsInRole("moderator"))
            {
                <a asp-action="Index" asp-controller="Card">Cards</a> <br />
                <a asp-action="Index" asp-controller="Door">Doors</a> <br />
                <a asp-action="Index" asp-controller="Person">People</a> <br />
            }

            <a asp-action="Index" asp-controller="DoorPassing">Door Passings</a> <br />
        }
        else
        {
            <p>
                <a asp-controller="Account" asp-action="Login">Вход</a>
                <a asp-controller="Account" asp-action="Registration">Регистрация</a>
            </p>
        }

        @RenderBody()

    </body>
</html>
