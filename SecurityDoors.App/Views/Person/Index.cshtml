@model IEnumerable<PersonViewModel>

<h1>Список людей</h1>

<div>
    <a asp-action="Create" asp-controller="Person">Добавить нового человека</a>
</div>

<br />

<div>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Фамилия</th>
                <th>Пол</th>
                <th>Паспорт</th>
                <th>Id карты</th>
                <th>Коментарий</th>
                <th>Доступные действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.SecondName</td>
                    <td>@item.LastName</td>
                    <td>@item.Gender</td>
                    <td>@item.Passport</td>
                    <td>@item.Card</td>
                    <td>@item.Comment</td>
                    <td>
                        <a asp-action="Details" asp-controller="Person" asp-route-id="@item.Id">Подробнее</a> |
                        <a asp-action="Edit" asp-controller="Person" asp-route-id="@item.Id">Изменить</a> |
                        <a asp-action="Delete" asp-controller="Person" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>