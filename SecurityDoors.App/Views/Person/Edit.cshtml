@model PersonEditModel

<div>
    <h2>Редактирование сотрудника №@Model.Id</h2>
</div>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="SecondName"></label>
        <input asp-for="SecondName" />
        <span asp-validation-for="SecondName"></span>
    </div>
    <div>
        <label asp-for="Gender">Пол</label>
        <select asp-for="Gender">
            <option>@PersonConstants.IsMale</option>
            <option>@PersonConstants.IsFemale</option>
        </select>
        <span asp-validation-for="Gender"></span>
    </div>
    <div>
        <label asp-for="Passport"></label>
        <input asp-for="Passport" />
        <span asp-validation-for="Passport"></span>
    </div>
    <div>
        <label asp-for="Comment"></label>
        <input asp-for="Comment" />
        <span asp-validation-for="Comment"></span>
    </div>
    <div>
        <label asp-for="Card"></label>
        <input asp-for="Card" />
        <span asp-validation-for="Card"></span>
    </div>
    <div>
        <input type="submit" value="Подтвердить редактирование" />
    </div>
</form>
