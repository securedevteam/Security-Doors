@model PersonViewModel

@{
    ViewData["Title"] = @Localizer["Title"];
}

<div class="text-center">
    <h2>@Localizer["Header"]</h2>
</div>

<br />

<form method="post" asp-controller="Person" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <b><label asp-for="FirstName"></label></b>
            <input type="text" asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group col-md-4">
            <b><label asp-for="LastName"></label></b>
            <input type="text" asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group col-md-4">
            <b><label asp-for="SecondName"></label></b>
            <input type="text" asp-for="SecondName" class="form-control" />
            <span asp-validation-for="SecondName"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <b><label asp-for="Gender"></label></b>
            <select asp-for="Gender" class="form-control">
                <option>@PersonConstants.IsMale</option>
                <option>@PersonConstants.IsFemale</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <b><label asp-for="Passport"></label></b>
            <input type="text" asp-for="Passport" class="form-control" />
            <span asp-validation-for="Passport"></span>
        </div>
    </div>

    <div class="form-group">
        <b><label asp-for="Card"></label></b>
        <select asp-for="Card" asp-items="@(new SelectList(Model.AvailableCards))" class="form-control"></select>
    </div>

    <div class="form-group">
        <b><label asp-for="Comment"></label></b>
        <input type="text" asp-for="Comment" class="form-control" />
        <span asp-validation-for="Comment"></span>
    </div>

    <button type="submit" class="btn btn-success">@Localizer["Create"]</button>
</form>