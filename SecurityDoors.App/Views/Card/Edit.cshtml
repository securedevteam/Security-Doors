@model CardEditModel

<div>
    <h2>Данные для изменения карточки №@Model.Id</h2>
</div>

<form method="post" asp-controller="Card" asp-action="Edit" asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly"></div>

    <div>

        <div>
            <label asp-for="Status">Статус: </label>
            <select asp-for="Status">
                <option>@Constants.IsActive</option>
                <option>@Constants.IsClosed</option>
                <option>@Constants.IsLost</option>
                <option>@Constants.IsSuspended</option>
            </select>
        </div>

        <div>
            <label asp-for="Comment">Комментарий: </label>
            <input type="text" asp-for="Comment" />
            <span asp-validation-for="Comment"></span>
        </div>

        <br />

        <div>
            <input type="submit" value="Подтвердить редактирование" />
        </div>
    </div>
</form>
