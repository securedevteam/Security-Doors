@model DoorEditModel

<div>
    <h2>Редактирование двери №@Model.Id</h2>
</div>

<form method="post" asp-controller="Door" asp-action="Edit" asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly"></div>

    <div>

        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>

        <div>
            <label asp-for="Status"></label>
            <select asp-for="Status">
                <option>@DoorConstants.IsActive</option>
                <option>@DoorConstants.IsClosed</option>
                <option>@DoorConstants.OnRepair</option>
            </select>
        </div>

        <div>
            <label asp-for="Comment"></label>
            <input type="text" asp-for="Comment" />
            <span asp-validation-for="Comment"></span>
        </div>

        <br />

        <div>
            <input type="submit" value="Подтвердить редактирование" />
        </div>
    </div>
</form>