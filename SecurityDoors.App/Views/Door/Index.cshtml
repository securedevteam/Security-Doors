@model IEnumerable<DoorViewModel>

@{
    ViewData["Title"] = "Список дверей - Security Doors";
}

<div class="text-center">
    <h1>Список дверей</h1>
</div>

<br />

@if (User.IsInRole("admin"))
{
    <div>
        <a class="btn btn-outline-success" asp-action="Create" asp-controller="Door">Добавить новую дверь</a>
    </div>
}

<br />

<div class="table-responsive">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Название</th>
                <th scope="col">Уровень</th>
                <th scope="col">Статус</th>
                <th scope="col">Доступные действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Level</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-action="Details" asp-controller="Door" asp-route-id="@item.Id">Подробнее</a>
                        <a asp-action="Edit" asp-controller="Door" asp-route-id="@item.Id">Изменить</a>

                        @if (User.IsInRole("admin"))
                        {
                            <a asp-action="Delete" asp-controller="Door" asp-route-id="@item.Id">Удалить</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>