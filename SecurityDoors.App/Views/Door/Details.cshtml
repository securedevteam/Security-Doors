@model DoorViewModel

<h2>Информация о двери №@Model.Id</h2>

<table>
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Уровень</th>
            <th>Статус</th>
            <th>Комментарий</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Description</td>
            <td>@Model.Level</td>
            <td>@Model.Status</td>
            <td>@Model.Comment</td>
        </tr>
    </tbody>
</table>